{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "lib": ["es2017", "es7", "es6", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*.tsx"
  ],
  "exclude": [
    "**/__tests__/*",
    "node_modules",
    "dist",
    "coverage"
  ]
}