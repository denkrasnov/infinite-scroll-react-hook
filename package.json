  "description": "react hook for infinite scrolling",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run test && npm run lint && npm run build",
    "test": "jest --colors",
    "test:coverage": "jest --coverage --colors --no-cache",
    "lint": "eslint --ext .js,.ts,.tsx --max-warnings 0 .",
    "prelint": "npm run check:types",
    "format": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx --fix .",
    "check:types": "tsc -p tsconfig.json --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/denkrasnov/infinite-scroll-react-hook.git"
  },
  "author": "Denis Krasnov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/denkrasnov/infinite-scroll-react-hook/issues"
  },
  "homepage": "https://github.com/denkrasnov/infinite-scroll-react-hook#readme",
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^25.1.3",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ts-jest": "^25.2.1",
    "typescript": "^5.8.3"
  }
}
